<script>

    /* pre load timings */

    window.addEventListener('load', () => {
        setTimeout(() =>{
            document.querySelector('.loader').classList.add('hide');
        }, 500);

        setTimeout(() =>{
            if (document.querySelector('.loader').classList.contains('hide')) {
            console.log('gotcha');
            setTimeout(() => {
                document.querySelector('.opener').classList.add('fade-in');
            }, 750)
            setTimeout(() => {
                document.querySelector('.opener').classList.remove('fade-in');
            }, 1000);
            setTimeout(() => {
                document.querySelector('.opener').classList.add('hide');
            }, 1000);
        };

        }, 750);

    });

    /* nav-shower */

     function showLinks () {
        let links = document.querySelectorAll('.nav-link');
        links.forEach((link) => {
            link.classList.add('show-link')
        });
     };

     setTimeout(() => {

        if (document.querySelector('.opener').classList.contains('hide')) {

                document.querySelector('.nav').classList.add('show-link');

                showLinks();

                document.querySelector('form').classList.add('show-link');

                document.querySelector('.backToTop').classList.add('show-link');

                document.querySelector('button').classList.add('show-link')

                document.querySelector('.sub').classList.add('show-link')

                document.querySelectorAll('input').forEach((input) => {
                    input.classList.add('show-link');
                })

            };

     }, 2000);

     /* pop-up */

     const login = document.querySelector('[data-login-target]');
     const pop_up = document.querySelector(login.dataset.loginTarget);
     const overlay = document.querySelector('#overlay');

     login.addEventListener('click', () => {

        pop_up.classList.add('scale');

        if (pop_up.classList.contains('scale')) {

            overlay.classList.remove('inactive');

            overlay.classList.add('active');

            overlay.addEventListener('click', () => {

                pop_up.classList.remove('scale');

                setTimeout(() => {

                    if (pop_up.classList.contains('scale') == false) {

                        overlay.classList.remove('active');
                        overlay.classList.add('inactive');

                    };

                }, 200);

            });

        }
     
     });

</script>

